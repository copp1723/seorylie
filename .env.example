# =============================================================================
# RYLIE AI PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables used by the Rylie AI platform.
# Copy this file to .env and update the values for your environment.
#
# SECURITY NOTE: Never commit .env files to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
# Examples:
#   Local: postgres://postgres:password@localhost:5432/rylie
#   Supabase: postgres://postgres:[password]@db.[project].supabase.co:5432/postgres
#   Render: postgres://user:pass@hostname:port/database
DATABASE_URL=postgres://username:password@host:port/database

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# 游댮 REQUIRED: Secret key for session encryption (generate a strong random string)
# Use: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-here

# 游댮 REQUIRED: Primary JWT secret for token signing (minimum 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=your-primary-jwt-secret-key-minimum-32-characters

# 游리 OPTIONAL: Previous JWT secret for rotation (enables zero-downtime updates)
JWT_PREVIOUS_SECRET=your-previous-jwt-secret-for-rotation

# 游리 OPTIONAL: JWT secret version for rotation tracking
JWT_SECRET_VERSION=1

# 游리 OPTIONAL: Encryption key for storing sensitive credentials in database
# Use: openssl rand -base64 32
CREDENTIALS_ENCRYPTION_KEY=your-credentials-encryption-key-here

# 游리 OPTIONAL: Phone number encryption key for privacy
# Use: openssl rand -base64 32
PHONE_ENCRYPTION_KEY=your-phone-encryption-key-here

# 丘멆잺 DEVELOPMENT ONLY: Authentication bypass for testing (true/false)
# WARNING: Never set to true in production!
ALLOW_AUTH_BYPASS=false

# 游리 OPTIONAL: Admin API key for system operations
ADMIN_API_KEY=your-admin-api-key-for-system-operations

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API key for AI functionality
# Get from: https://platform.openai.com/api-keys
# Format: sk-...
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service provider (sendgrid, gmail, smtp)
EMAIL_SERVICE=sendgrid

# SendGrid Configuration (recommended)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Gmail Configuration (alternative)
GMAIL_USER=your-gmail-address@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# SMTP Configuration (alternative)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=false

# Legacy email configuration (for backward compatibility)
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USER=your-email-username
EMAIL_PASS=your-email-password

# Email retry configuration (optional)
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=1000
EMAIL_MAX_DELAY=30000

# Frontend URL for email links (required for production)
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Set SKIP_REDIS=true to disable Redis and use in-memory fallback
SKIP_REDIS=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# =============================================================================
# TWILIO CONFIGURATION (OPTIONAL)
# =============================================================================
# Twilio credentials for SMS functionality
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_FROM_NUMBER=your-twilio-from-number
TWILIO_WEBHOOK_URL=https://yourdomain.com/api/twilio/webhook

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, production, test)
NODE_ENV=development

# 游댮 REQUIRED: Server port (default: 3000 for development, 5000 for production)
PORT=3000

# 游리 OPTIONAL: Application URLs for proper link generation
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3000

# 游리 OPTIONAL: Default email address for system notifications
DEFAULT_FROM_EMAIL=noreply@localhost

# 游리 OPTIONAL: Server IP binding (0.0.0.0 for all interfaces)
SERVER_IP=0.0.0.0

# 游리 OPTIONAL: Platform detection (set automatically by hosting providers)
RENDER=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# 游리 OPTIONAL: Redis database number for testing isolation
REDIS_DB=0

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# TRACE CORRELATION & OBSERVABILITY
# =============================================================================
# 游리 OPTIONAL: Enable distributed trace correlation (true/false)
ENABLE_TRACE_CORRELATION=false

# 游리 OPTIONAL: Grafana Tempo URL for trace visualization
# Example: http://localhost:3200/tempo
GRAFANA_TEMPO_URL=

# 游리 OPTIONAL: Service name for trace identification
TRACE_SERVICE_NAME=cleanrylie-app

# 游리 OPTIONAL: Trace ID format (uuidv4 or w3c)
TRACE_ID_FORMAT=uuidv4

# 游리 OPTIONAL: Enable tracing for specific components
TRACE_ETL_ENABLED=true
TRACE_WEBSOCKET_ENABLED=true

# 游리 OPTIONAL: Trace logging configuration
TRACE_LOG_LEVEL=info
INCLUDE_TEMPO_URL_IN_LOGS=false
