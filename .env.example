# Rylie SEO Hub - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rylie_seo
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=development-secret-key-change-in-production
BCRYPT_ROUNDS=12

# Development Settings
ALLOW_MOCK_AUTH=true
LOG_LEVEL=info

# White-label Branding Defaults
DEFAULT_BRAND_NAME=Rylie SEO
DEFAULT_BRAND_COLOR=#2563eb

# External Service Integrations
# Google Analytics 4 - Centralized Service Account
GA4_SERVICE_ACCOUNT_EMAIL=rylie-analytics@your-project.iam.gserviceaccount.com
GA4_PROJECT_ID=your-google-cloud-project
GA4_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GA4_KEY_ID=your-key-id
GA4_ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# GA4 API Quotas and Rate Limiting
GA4_DAILY_QUOTA_LIMIT=100000
GA4_HOURLY_QUOTA_LIMIT=10000
GA4_CONCURRENT_REQUESTS=10
GA4_REQUESTS_PER_SECOND=10

# SEO Werks Integration
SEOWORKS_API_KEY=seoworks-secure-api-key-change-in-production

# Legacy GA4 Configuration (deprecated)
GA4_PROPERTY_ID=
GA4_SERVICE_ACCOUNT_KEY=

# OpenAI for AI processing
OPENAI_API_KEY=

# Email Configuration (for notifications)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@rylie-seo.com

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=rylie-seo-files

# Monitoring & Analytics
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000